<div class="field-wrap field-wrap--image-and-text">
    <img class="field-image field-image--with-text" src="<%= self.fields[:file].get_out_val %>" />
    <% if self.fields[:caption] %>
        <span class="field-caption field-caption--with-image"><%= self.fields[:caption].get_out_val %></span>
    <% end %>
</div>
